# Copy this file to .env and fill in your actual API keys
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_anon_key_here

SUPABASE_BUCKET=uploaded-files

# RAG configuration
RAG_OPENAI_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-small
LENNY_PROMPT_PATH=lenny_system.md
RAG_TEMPERATURE=0.2
RAG_MAX_TOKENS=280

# Caching configuration (reduces OpenAI API costs)
ENABLE_PROMPT_CACHE=true
ENABLE_EMBEDDING_CACHE=true

# Advanced RAG Features
COHERE_API_KEY=your_cohere_key_here
ENABLE_RERANKING=true
ENABLE_QUERY_EXPANSION=true
ENABLE_HYBRID_SEARCH=true
ENABLE_EVALUATION=true

# RAG Quality Thresholds
RAG_RELEVANCE_THRESHOLD=0.7
RAG_RERANK_THRESHOLD=0.3
RAG_TOP_K_CANDIDATES=20
RAG_FINAL_TOP_K=5

# BM25 Hybrid Search Weights
BM25_WEIGHT=0.3
VECTOR_WEIGHT=0.7
